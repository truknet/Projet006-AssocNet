{% trans_default_domain 'FOSUserBundle' %}

{% if error %}

    <div class="alert alert-warning" role="alert">
        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    </div>
{% endif %}


<form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">

    <h2 class="form-signin-heading">Identification</h2>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" class="form-control" placeholder="Nom d'utilisateur" name="_username" value="{{ last_username }}" required="required" />
    <br>
    <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" class="form-control" placeholder="Mot de passe" name="_password" required="required" />

    <div class="checkbox">
        <label for="remember_me">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
        </label>
    </div>

    <input class="btn btn-sm btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    <a class="btn btn-primary btn-sm" href="{{ path('fos_user_registration_register') }}">Vous n'Ãªtes pas encore inscrit ?</a>
</form>
