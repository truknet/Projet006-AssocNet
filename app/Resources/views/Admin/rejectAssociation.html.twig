{% extends "::layoutAdmin.html.twig" %}

{% block title %}Association{% endblock %}

{% block body %}

    <h2 class="center">Rejeter une association</h2><hr>

    {{ form_start(form) }}
    <div class="well">
        <div class="form-group">
            {{ form_label(form.rejectMessage, "Description du rejet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.rejectMessage) }}
            <div class="col-sm-10">
                {{ form_widget(form.rejectMessage, {'attr': {'class': 'form-control'}}) }}
                <p>Ce message sera envoyé à l'auteur de cette association.</p>
            </div>
        </div>
        <br>
        <p>Etes-vous certain de vouloir rejeter cette association "#{{ associations.id }} - {{ associations.name }}" ?<br></p>

        <a href="{{ path('admin_view_all_associations', {'page': 1}) }}" class="btn btn-default btn-sm">Retour à liste</a>
        <input type="submit" value="Rejeter" class="btn btn-warning btn-sm" />
        {{ form_end(form) }}
    </div>
    {{ form_end(form) }}

{% endblock %}
