{% extends "::layoutAdmin.html.twig" %}
{% block title %}Catégories{% endblock %}
{% block body %}
    <h2 class="text-center">Affichage de toutes les catégories.</h2>
    <hr>

    <div class="text-center">
        <p>Total des catégories : {{ pagination.getTotalItemCount }}</p>
        <a class="btn btn-primary btn-sm" href="{{ path('admin_add_categorie') }}">Ajouter catégorie</a>
    </div>

    <br>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th nowrap>{{ knp_pagination_sortable(pagination, 'Nom' , 'categorie.name') }}</th>
            <th nowrap></th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in pagination %}
            <tr {% if loop.index is odd %}class="color"{% endif %}>
                <td>{{ categorie.name }}</td>
                <td class="text-right">
                    <a class="btn btn-primary btn-xs" href="{{ path('admin_del_categorie', {'id': categorie.id}) }}">Supprimer</a>
                    <a class="btn btn-primary btn-xs" href="{{ path('admin_edit_categorie', {'id': categorie.id}) }}">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
