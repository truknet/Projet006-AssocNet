{% extends "::layoutFront1.html.twig" %}
{% block title %}Associations{% endblock %}
{% block body %}
    <h2 class="text-center">Association : {{ association.name }}</h2>
    <hr>

    <div class="well">

        {% if association.logo is not null %}
            <div class="text-center"><img class="img_logo" src="{{ asset('uploads/images/' ~ association.logo) }}" alt="Logo"></div>
        {% endif %}
        <table class="table table-striped table-hover">
            <tr><td nowrap>Nom de l'association : </td><td>{{ association.name }}</td></tr>
            <tr><td>Catégorie : </td><td>{{ association.categorie.name }}</td></tr>
            <tr><td>Auteur : </td><td>{{ association.author }}</td></tr>
            <tr><td>Date de création : </td><td>{{ association.dateCreation|date('Y-m-d') }}</td></tr>
            <tr><td>Adresse : </td><td>{{ association.searchaddress }}</td></tr>
            <tr><td>Complement d'adresse : </td><td>{{ association.address2 }}</td></tr>
            <tr><td>Numéro de rue : </td><td>{{ association.numstreet }}</td></tr>
            <tr><td>Rue : </td><td>{{ association.address1 }}</td></tr>
            <tr><td>Code postal : </td><td>{{ association.postalcode }}</td></tr>
            <tr><td>Ville : </td><td>{{ association.city }}</td></tr>
            <tr><td>Département : </td><td>{{ association.department }}</td></tr>
            <tr><td>Région : </td><td>{{ association.region }}</td></tr>
            <tr><td>Pays : </td><td>{{ association.country }}</td></tr>
            <tr><td>Numéro de téléphone : </td><td>{{ association.phoneNumber }}</td></tr>
            <tr><td>Url : </td><td>{{ association.url }}</td></tr>
            <tr><td>Nombre de visite : </td><td>{{ association.hits }}</td></tr>
            <tr><td>Numéro RNA : </td><td>{{ association.rna }}</td></tr>
            <tr><td>Objet : </td><td>{{ association.object }}</td></tr>
        </table>
    </div>

{% endblock %}
